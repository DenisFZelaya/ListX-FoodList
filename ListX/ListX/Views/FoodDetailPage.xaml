<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListX.Views.FoodDetailPage"
             BackgroundColor="Gainsboro"
             >
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Image x:Name="MyImageCall" VerticalOptions="CenterAndExpand"/>
            <Label x:Name="MyItemNameShow" HorizontalTextAlignment="Center" FontSize="Title" FontAttributes="Bold"/>
            <Label x:Name="MyIngredientItemShow" Margin="20,20" FontSize="Small" HorizontalTextAlignment="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>